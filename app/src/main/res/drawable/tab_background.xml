<!-- res/drawable/tab_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/> <!-- Background color when selected -->
            <corners android:radius="30dp"/> <!-- Corner radius -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/> <!-- Transparent background when not selected -->
            <corners android:radius="30dp"/> <!-- Corner radius -->
        </shape>
    </item>
</selector>
