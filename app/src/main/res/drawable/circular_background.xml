<!-- res/drawable/circular_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- Define the solid color inside the circle -->
    <solid android:color="@color/transparent" /> <!-- Replace with your desired color -->

    <!-- Define the stroke for the border -->
    <stroke
        android:width="0.5dp"
        android:color="@color/color_neutral02" />

    <!-- Optional: Padding inside the shape -->
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />

    <!-- Optional: Specify the size of the shape -->
    <size
        android:width="44dp"
        android:height="44dp" />
</shape>
